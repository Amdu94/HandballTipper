generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

type MatchesGuesses {
  user      String
  homeScore Int
  awayScore Int
  points    Int
}

type UsersGuesses {
  match  String
  homeScore   Int?
  awayScore   Int?
  points Int
}

model matches {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime         @db.Date
  home      String
  away      String
  homeScore Int?
  awayScore Int?
  guesses   MatchesGuesses[]
}

model users {
  id       String           @id @default(auto()) @map("_id") @db.ObjectId
  username String			@unique
  email    String			@unique
  password String
  points   Int
  guesses  UsersGuesses[]
}